class Bus{
  private:
    char* producer;
    char model[80];
    int number;
    int seat;
  public:
    Bus();
    Bus(char* p, char* m, int n, int s);
    Bus(Bus &b);
    Bus(char *t);
    virtual ~Bus();

    void setProducer(char* p);
    void setModel(char* m);
    void setNumber(int n);
    void setSeat(int s);

    char* getProducer();
    char* getModel();
    int getNumber();
    int getSeat();

    virtual char* getKey();

    virtual void print();
    virtual void scan();

    void operator=(Bus &b);

};

 